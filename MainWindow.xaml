<Window x:Class="tictactoe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="TicTacToe" Height="900" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="Button_0_0" Click="Button_Click" Grid.Row="0" Grid.Column="0" FontSize="100px" FontWeight="Bold" FontFamily="Comic Sans Ms"/>
        <Button x:Name="Button_1_0" Click="Button_Click" Grid.Row="1" Grid.Column="0" FontSize="100px" FontWeight="Bold" FontFamily="Comic Sans Ms"/>
        <Button x:Name="Button_2_0" Click="Button_Click" Grid.Row="2" Grid.Column="0" FontSize="100px" FontWeight="Bold" FontFamily="Comic Sans Ms"/>
        <Button x:Name="Button_0_1" Click="Button_Click" Grid.Row="0" Grid.Column="1" FontSize="100px" FontWeight="Bold" FontFamily="Comic Sans Ms"/>
        <Button x:Name="Button_1_1" Click="Button_Click" Grid.Row="1" Grid.Column="1" FontSize="100px" FontWeight="Bold" FontFamily="Comic Sans Ms"/>
        <Button x:Name="Button_2_1" Click="Button_Click" Grid.Row="2" Grid.Column="1" FontSize="100px" FontWeight="Bold" FontFamily="Comic Sans Ms"/>
        <Button x:Name="Button_0_2" Click="Button_Click" Grid.Row="0" Grid.Column="2" FontSize="100px" FontWeight="Bold" FontFamily="Comic Sans Ms"/>
        <Button x:Name="Button_1_2" Click="Button_Click" Grid.Row="1" Grid.Column="2" FontSize="100px" FontWeight="Bold" FontFamily="Comic Sans Ms"/>
        <Button x:Name="Button_2_2" Click="Button_Click" Grid.Row="2" Grid.Column="2" FontSize="100px" FontWeight="Bold" FontFamily="Comic Sans Ms"/>
        <TextBlock x:Name="Player1Score" Grid.Row="3" Grid.Column="0" FontSize="20px" FontWeight="Bold" FontFamily="Comic Sans Ms" Margin="5,0,0,0" Grid.RowSpan="2" Foreground="Blue"/>
        <Button x:Name="reset" Click="Button_Reset" Grid.Row="3" Grid.Column="1" FontSize="20px" FontWeight="Bold" FontFamily="Comic Sans Ms" Content="Restart"/>
        <TextBlock x:Name="Player2Score" Grid.Row="3" Grid.Column="2" FontSize="20px" FontWeight="Bold" FontFamily="Comic Sans Ms" Foreground="red"/>
    </Grid>
</Window>
